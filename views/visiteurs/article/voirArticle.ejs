                </div>
            </div>
        </section> 
        <section class="pt-0">
            <div class="container position-relative" data-sticky-container="">
                <div class="row">
                    <!-- Left sidebar START -->
                    <div class="col-lg-2">
                        <div class="text-start text-lg-center mb-5" data-sticky="" data-margin-top="80" data-sticky-for="991">
                            <!-- Author info -->
                            <div class="position-relative">
                                <div class="avatar avatar-xl">
                                    <img class="avatar-img rounded-circle" src="/front/assets/images/avatar/03.jpg" alt="avatar">
                                </div>
                                <a href="#" class="h5 stretched-link mt-2 mb-0 d-block">Louis Ferguson</a>
                                <p>An editor at Blogzine</p>
                            </div>
                            <hr class="d-none d-lg-block">
                            <!-- Card info -->
                            <ul class="list-inline list-unstyled">
                                <li class="list-inline-item d-lg-block my-lg-2">Nov 15, 2021</li>
                                <li class="list-inline-item d-lg-block my-lg-2">5 min read</li>
                                <li class="list-inline-item d-lg-block my-lg-2"><a href="#" class="text-body"><i class="far fa-heart me-1"></i></a> 266</li>
                                <li class="list-inline-item d-lg-block my-lg-2"><i class="far fa-eye me-1"></i> 2344 Views</li>
                            </ul>
                            <!-- Tags -->
                            <ul class="list-inline text-primary-hover mt-0 mt-lg-3">
                              <li class="list-inline-item">
                                  <a class="text-body" href="#">#agency</a>
                              </li>
                              <li class="list-inline-item">
                                  <a class="text-body" href="#">#business</a>
                              </li>
                              <li class="list-inline-item">
                                  <a class="text-body" href="#">#theme</a>
                              </li>
                              <li class="list-inline-item">
                                  <a class="text-body" href="#">#bootstrap</a>
                              </li>
                              <li class="list-inline-item">
                                  <a class="text-body" href="#">#marketing</a>
                              </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-7 mb-5">
                        <div class="container position-relative" data-sticky-container="">
                            <div class="row">
                                <!-- Main Content START -->
                                
                                      <p><%- article.descriptionArticle %>  </p>
                    
                                    <!-- Divider -->
                                    <div class="text-center h5 mb-4">. . .</div>
                    
                                   
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div data-sticky="" data-margin-top="80" data-sticky-for="991">
                      
                            
                            <!-- Advertisement -->
                            <div class="mt-4">
                                <a href="#" class="d-block card-img-flash">
                                    <img src="/front/assets/images/adv.png" alt="">
                                </a>
                            </div>
                        </div>
                    </div> 
                    <!-- Divider -->
				    <hr>
                    <% if (commentaire.length > 0 ) { %>
                        <div>
                            <h3> <%= commentaire.length %>  comments</h3>
                            <!-- Comment level 1-->
                            <% commentaire.forEach(element => { %>
                                <div class="my-4 d-flex">
                                    <div>
                                      <div class="mb-2">
                                          <h5 class="m-0"><%= element.nomOuEmail  %> </h5>                                        
                                      </div>
                                      <p><%= element.contenuCommentaire %> </p>
                                    </div>
                                  </div>
                            <% }) %>
                            <!--ajout commentaire-->
                            <h3>Ajouter un comentaire</h3>
                            <form class="row g-3 mt-2" method="post" action="/info/article/ajoutCommentaire/<%= article.idArticle%> ">
                                <div class="col-md-6">
                                    <label class="form-label">votre Nom</label>
                                    <input type="text" name="nomOuEmail" class="form-control" aria-label="First name">
                                </div>
                                <div class="col-12">
                                    <label id="comment" class="form-label">votre commentaire</label>
                                      <textarea name="contenu" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary"> votre commentaire</button>
                                </div>
                            </form>
                        </div>
                    <% } else { %>
                        <div>
                            <h3> 0 commentaire </h3>
                            <form class="row g-3 mt-2" method="post" action="/info/article/ajoutCommentaire/<%= article.idArticle%> ">
                                <div class="col-md-6">
                                    <label class="form-label">Name *</label>
                                    <input type="text" name="nomOuEmail" class="form-control" aria-label="First name">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Your Comment *</label>
                                      <textarea name="contenu" class="form-control" rows="3"> </textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Post comment</button>
                                </div>
                            </form>
                        </div>
                    <% } %>   
                     
                </div>
            </div>
        </section>
                             
    </main>   
    



<!-- Back to top -->
<div class="back-top"><i class="bi bi-arrow-up-short"></i></div>

